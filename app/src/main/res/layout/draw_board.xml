<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tictaciq.sasgurus.tictaciq2.MainActivity">

  <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@android:color/darker_gray"
    android:id="@+id/gridLayoutHeader">

    <TextView
      android:text="Tic Tac IQ"
      android:layout_below="@+id/gridLayout"
      android:layout_toRightOf="@+id/textView2"
      android:layout_toEndOf="@+id/textView2"
      android:textAppearance="@style/TextAppearance.AppCompat"
      android:layout_column="0"
      android:layout_row="0"
      android:background="@android:color/holo_orange_light"
      android:layout_height="45dp"
      android:textSize="24sp"
      android:textStyle="bold"
      android:id="@+id/lblTitle" />

    <TextView
      android:text="Round 1"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      android:layout_alignBottom="@+id/gridLayout"
      android:textAppearance="@style/TextAppearance.AppCompat"
      android:layout_row="0"
      android:layout_column="15"
      android:background="@android:color/holo_orange_light"
      android:textSize="24sp"
      android:id="@+id/lblRound" />

  </GridLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="46dp"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light"
    android:id="@+id/linLayoutBoard1"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="283dp">

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:id="@+id/btnOne"
      android:layout_weight="1" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnTwo" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnThree" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="136dp"
    android:background="@android:color/holo_blue_light"
    android:id="@+id/linLayoutBoard2"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="190dp">

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnFour" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnFive" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnSix" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="226dp"
    android:background="@android:color/holo_green_light"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100dp"
    android:id="@+id/linLayoutBoard3">

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnSeven" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnEight" />

    <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="88dp"
      android:layout_weight="1"
      android:id="@+id/btnNine" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="316dp"
    android:background="@android:color/holo_orange_dark"
    android:id="@+id/linLayoutMoves"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp">

    <TextView
      android:text="Moves"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      tools:textStyle="bold"
      tools:textSize="24sp"
      android:gravity="center_vertical"
      android:id="@+id/lblMoves" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="355dp"
    android:id="@+id/linLayoutPLmoves"
    android:layout_alignParentBottom="true">

    <TextView
      android:text="Player Moves :"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_weight="1"
      android:textSize="18sp"
      android:gravity="center_vertical"
      android:background="@android:color/holo_orange_dark"
      android:id="@+id/lblPlayerMoves" />

    <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView6"
      android:layout_weight="0.35" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linLayoutScore"
    android:layout_marginBottom="96dp"
    android:layout_alignBottom="@+id/linLayoutBoard1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
      android:text="Win:"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_weight="1"
      android:background="@android:color/holo_green_light"
      android:textSize="18sp"
      android:id="@+id/lblWin" />

    <TextView
      android:text="Draw:"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:id="@+id/lblDraw"
      android:background="@android:color/holo_orange_dark"
      android:layout_weight="1"
      android:textSize="18sp" />

    <TextView
      android:text="Lose:"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:id="@+id/lblLose"
      android:background="@android:color/holo_red_light"
      android:layout_weight="1"
      android:textSize="18sp" />
  </LinearLayout>


</RelativeLayout>
